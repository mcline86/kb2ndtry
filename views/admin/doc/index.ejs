<% include ../partial/header %>

<div class='container'>
	<div class='row'>
        <h1>Document Manager</h1>
        <a class='btn btn-success' href='/admin/doc/new'>Create New</a>
        <button class='btn btn-primary' data-toggle="modal" data-target='#NewDoc'>New Modal</button>
		<table class='table table-hover'>
			<thead>
				<th>#</th>
				<th width='70%'>Title</th>
				<th>ID</th>
				<th>Created</th>
			</thead>
			<% if(docs){ docs.forEach(function(doc, index){ %>
				<tr>
					<td><%= index %></td>
                    <td><a href='/admin/doc/<%= doc._id %>'><%= doc.title %></a></td>
					<td><%= doc._id %></td>					
					<td class='rawDate'><%= doc.created %></td>
				</tr>
			<% })} %>
		</table>
	</div>
</div>


<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id='NewDoc'>
  <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Document</h4>
          </div>

          <div class="container-fluid">
              <br>
            <form id='newDoc_form' class='form' method='POST' action='/admin/doc/new'>
                <input type='submit' class='btn btn-success' value='Create'>
                <input type='text' name='doc[title]' class='form-control space' placeholder="Document Title">
                <input type="text" name='doc[meta]' class="form-control space" placeholder="Summary">
                <select class='form-control' name='doc[category]'>
                    <option value="" disabled selected hidden>No Category</option>

                </select>

                <textarea name='doc[body]'></textarea>
            </form>
        </div>
    </div>
  </div>
</div>


<script type="text/javascript">
    var simplemde = new SimpleMDE();
    var test;
$(document).ready(function(){

	$('.rawDate').each(function(){
		var tmp = $(this).html();
		$(this).html(moment(tmp).format("MM/DD/YYYY"));
	});

    $.ajax({
        url: "/api/doc/58051ef7b8639818d8679b1a"
    }).done(function(data){
       test = data; 
    });    
    
});

</script>

