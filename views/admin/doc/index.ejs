<% include ../partial/header %>

<div class='container'>
	<div class='row'>
        <div class='panel panel-info'>
            <div class='panel-heading'>
                <span class='manTitle'> Document Manager </span>
                <button class='btn btn-primary pull-right' data-toggle="modal" data-target='#NewDoc'>Create New</button>
            </div>
            <div class='panel-body'>                
                <!-- Table built in script   -->
                <img src='/images/preloader.gif'>                   
            </div>
            <div class='panel-footer'>
                <nav aria-label="..." class='text-center'>
                    <ul class="pagination">
                        <!-- Built in script -->
                    </ul>
                </nav>
            </div>
        </div>		
	</div>
</div>


<!-- New Document Modal -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id='NewDoc'>
  <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Document</h4>
          </div>
          <div class="container-fluid">
              <br>
            <form id='newDoc_form' class='form' method='POST' action='/admin/doc/new'>
                <input type='submit' class='btn btn-success' value='Create'>
                <input type='text' name='doc[title]' class='form-control space' placeholder="Document Title">
                <input type="text" name='doc[meta]' class="form-control space" placeholder="Summary">
                <select class='form-control' name='doc[category]'>
                    <option value="" disabled selected hidden>No Category</option>
                    <!-- Built in script -->
                </select>
                <textarea id='newDocArea' name='doc[body]'></textarea>
            </form>
        </div>
    </div>
  </div>
</div>

<!-- Edit Document Modal -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id='editDocModal'>
  <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Edit Document</h4>
          </div>
          <div class="container-fluid">
              <br>
              <form  id='edDelete' action='Update at load' method='POST'><input type='submit' value='Delete' class='btn btn-danger pull-right'></form>
            <form id='editDoc_form' class='form' method='POST' action='update me please'>
                <input type='submit' class='btn btn-success' value='Update'>
                <input type='text' name='doc[title]' class='form-control space titleInput'>
                <input type="text" name='doc[meta]' class="form-control space metaInput">
                <select class='edSelect form-control' name='doc[category]'>
                    <option value="" disabled selected hidden>No Category</option>
                    <!-- Built in script -->
                </select>
                <textarea id='editDocArea' name='doc[body]'></textarea>
            </form>
        </div>
    </div>
  </div>
</div>

<script src="/javascript/docManager.js" type='text/javascript'></script>

<% include ../partial/footer %>